{
  "name": "auto-project",
  "version": "1.0.0",
  "description": "A standalone auto-battler game inspired by Dota 2's Auto Gladiators arcade mode. Built incrementally with modular components for easy development and maintenance.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint *.js src/**/*.js",
    "lint:fix": "eslint *.js src/**/*.js --fix",
    "start:server": "npm --prefix server install && npm --prefix server run start",
    "railway:build": "cd server && npm ci",
    "railway:start": "cd server && npm start",
    "docker:build": "docker build -t auto-gladiators .",
    "docker:run": "docker run -p 8080:8080 -p 3001:3001 auto-gladiators",
    "docker:dev": "docker-compose up --build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "^4.0.3",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "happy-dom": "^20.0.8",
    "jsdom": "^27.0.1",
    "vitest": "^4.0.3"
  }
}
